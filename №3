#include <iostream>
#include <math.h>
using namespace std;
int main()
{
	setlocale(0, "");
	int K,N;
	cout << "Введите число: ";
	cin >> K;
	cout << "Введите день недели 1ого января: ";
	cin >> N;
	
	if (K >= 1 && K <= 365 && N >= 1 && N <= 7)
	{
		cout << "Номер дня недели: " << ((K + N - 2) % 7) + 1;
	}
	else
		cout << "Неверные данные!";
}   

